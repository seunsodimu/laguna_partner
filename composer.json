{
    "name": "lagunatools/partners-portal",
    "description": "Laguna Partners Portal - Vendor and Dealer Management System",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "LagunaPartners\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LagunaPartners\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "sync-accounts": "php scripts/sync-accounts.php",
        "sync-pos": "php scripts/sync-purchase-orders.php",
        "sync-items": "php scripts/sync-items.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}